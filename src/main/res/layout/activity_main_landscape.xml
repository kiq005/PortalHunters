<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.kaique.portalhunters.MainActivity"
    android:background="@drawable/bg1_vert">

    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:paddingLeft="-50dp"
        android:layout_marginLeft="96dp"
        android:scaleType="fitXY"
        android:id="@+id/imgHero"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_hero" />

    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:paddingLeft="-50dp"
        android:layout_marginLeft="-24dp"
        android:scaleType="fitXY"
        android:id="@+id/imgHeroine"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_heroine" />



    <ImageView
        android:layout_width="384dp"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/imgText"
        android:src="@mipmap/txt_portal_hunters"
        android:drawingCacheQuality="high"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
