<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaique.portalhunters.CharSelectionActivity"
    android:background="@drawable/bg1_vert">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" -- No char selected --"
        android:id="@+id/txtCharName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@mipmap/ic_play"
        android:text=""
        android:id="@+id/btPlay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="clickPlay"
        style="?attr/borderlessButtonStyle"
        />

    <Button
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:background="@mipmap/ic_documents"
        android:text="New Char"
        android:id="@+id/btNewChar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:onClick="clickNewChar"
        style="?attr/borderlessButtonStyle" />

</RelativeLayout>
